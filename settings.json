{
	"update.showReleaseNotes": false,

	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"window.customTitleBarVisibility": "never",
	"window.menuBarVisibility": "hidden",
	"window.zoomLevel": 3,
	"window.zoomPerWindow": false,

	"workbench.activityBar.location": "hidden",
	"workbench.colorTheme": "Default Light Modern",
	"workbench.editor.showTabs": "multiple",
	"workbench.layoutControl.enabled": false,
	"workbench.sideBar.location": "left",
	"workbench.statusBar.visible": false,

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.enableDragAndDrop": true,

	"extensions.ignoreRecommendations": true,

	"breadcrumbs.enabled": false,

	"editor.fontSize": 13,
	"editor.lineHeight": 0,
	"editor.lineNumbers": "on",
	"editor.showFoldingControls": "always",
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 80,
	"editor.minimap.enabled": true,
	"editor.minimap.autohide": true,
	"editor.minimap.scale": 1,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.indentSize": "tabSize",
	"editor.autoIndent": "none",

	"html.autoClosingTags": true,
	"css.completion.completePropertyWithSemicolon": true,
	"javascript.autoClosingTags": true,

	"notebook.cellToolbarLocation": { "default": "left", "jupyter-notebook": "right" },
	"notebook.insertFinalNewline": false,
	"notebook.insertToolbarLocation": "both",
	"notebook.markup.fontSize": 13,
	"notebook.output.fontSize": 13,
	"notebook.output.lineHeight": 0,
	"notebook.output.scrolling": true,
	"notebook.output.textLineLimit": 10,
	"notebook.output.wordWrap": false,

	"terminal.integrated.fontSize": 13,
	"terminal.integrated.defaultLocation": "editor",
	"terminal.integrated.defaultProfile.linux": null,

	"files.associations": {},
	"files.autoSave": "afterDelay",
	"files.enableTrash": true,
	"files.eol": "\n",
	"files.exclude": { "**/.DS_Store": false, "**/.git": false, "**/.hg": false, "**/.svn": false, "**/CVS": false, "**/Thumbs.db": false },
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"git.enabled": false,
	"git.ignoreLimitWarning": true,
	"git.openRepositoryInParentFolders": "never",

	"[terraform]": { "editor.tabSize": 2, "editor.insertSpaces": true },
	"[yaml]": { "editor.insertSpaces": false, "editor.tabSize": 2, "editor.autoIndent": "none" },
	"[makefile]": { "editor.insertSpaces": false, "editor.tabSize": 4, "editor.indentSize": "tabSize", "editor.autoIndent": "full" },

	"github.copilot.advanced": {},
	"github.copilot.enable": { "*": false, "plaintext": false, "markdown": false, "scminput": false },
	"github.copilot.editor.enableAutoCompletions": false,

	"jupyter.askForKernelRestart": false
}
